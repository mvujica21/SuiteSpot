<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Background="LightSkyBlue">
        <StackPanel DockPanel.Dock="Left" Width="125" Background="AliceBlue" x:Name="navBar">
            <Button Content="Login" Height="60" x:Name="btnLogin"/>
            <Button Content="Room reservation" Height="60" x:Name="btnRoomReservation" Click="btnRoomReservation_Click"/>
            <Button Content="Room managment"  Height="60" Click="btnRoomManagment_Click" x:Name="btnRoomManagment"/>
            <Button Content="Manage employees"  Height="60" x:Name="btnManageEmployees" Click="btnManageEmployees_Click"/>
            <Button Content="Dashboard"  Height="60" x:Name="btnDashboard" Click="btnDashboard_Click"/>
            <Button Content="Task managment" Height="60" x:Name="btnTaskManagment" Click="btnTaskManagment_Click"/>
            <Button Content="Logout" Height="60" x:Name="btnLogout"/> 
        </StackPanel>
        <ContentControl x:Name="contentControl">
            
        </ContentControl>
    </DockPanel>
</Window>
