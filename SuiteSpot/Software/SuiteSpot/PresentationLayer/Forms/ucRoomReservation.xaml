<UserControl x:Class="PresentationLayer.Forms.ucRoomReservation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:PresentationLayer.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Grid Margin="20">
            <Calendar HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20"/>

        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20">
            <Button Content="Add Booking" Margin="5" Click="AddBooking_Click"/>
            <Button Content="Modify Booking" Margin="5" Click="ModifyBooking_Click"/>
            <Button Content="Cancel Booking" Margin="5" Click="CancelBooking_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
